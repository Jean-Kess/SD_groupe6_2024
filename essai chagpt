import random

# L'ordinateur choisit un nombre aléatoire entre 1 et 100
nombre_mystere = random.randint(1, 100)

print("Bienvenue au jeu du 'Devine le Nombre'!")
print("J'ai choisi un nombre entre 1 et 100. À vous de deviner!")

# Initialisation des variables
tentatives = 0
trouvé = False

# Boucle principale du jeu
while not trouvé:
    # Demander au joueur d'entrer un nombre
    essai = int(input("Votre essai : "))
    tentatives += 1

    # Vérifier si l'essai est correct
    if essai < nombre_mystere:
        print("Trop petit! Essayez encore.")
    elif essai > nombre_mystere:
        print("Trop grand! Essayez encore.")
    else:
        print(f"Bravo! Vous avez trouvé le nombre {nombre_mystere} en {tentatives} tentatives.")
        trouvé = True

print("Merci d'avoir joué!")
